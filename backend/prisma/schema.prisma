generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         Int         @id @default(autoincrement())
  username   String      @unique @db.VarChar(30)
  password   String      @db.VarChar(255)
  fullname   String      @db.VarChar(50)
  phone      String      @db.VarChar(12)
  createdAt  DateTime    @default(now())
  role       Role 
    
  managedFeeRecords   FeeRecord[]         @relation("UserManageFee")
  managedChanges      ResidentChange[]    @relation("UserManageChange")   
}

enum Role {
  HEAD
  DEPUTY
  ACCOUNTANT
}

model Household {
  id                Int         @id @default(autoincrement())
  address           String      @db.VarChar(100)
  registrationDate  DateTime
  nbrOfResident     Int
  status            Int

  ownerId           Int
  owner             Resident    @relation("OwnerResident", fields: [ownerId], references: [id])

  residents         Resident[]
  feeRecords        FeeRecordOnHousehold[]
}

model Resident {
  id                Int         @id @default(autoincrement())
  residentCCCD      String      @unique
  fullname          String      @db.VarChar(100)
  dob               DateTime   
  relationToOwner   String
  status            Int
  createdAt         DateTime    @default(now())

  householdId       Int      
  household         Household   @relation(fields: [householdId], references: [id])

  ownedHouseholds   Household[] @relation("OwnerResident")

  changes           ResidentChange[]
}

model ResidentChange {
  id          Int       @id @default(autoincrement())
  changeType  Int       
  fromAddress String
  toAddress   String
  fromDate    DateTime
  toDate      DateTime?
  reason      String
  status      String

  residentId  Int
  resident    Resident @relation(fields: [residentId], references: [id])

  managerId   Int?
  manager     User?     @relation("UserManageChange", fields: [managerId], references: [id])
}

model FeeRecord {
  id                Int         @id @default(autoincrement())
  recordName        String      @db.VarChar(100)
  description       String      @db.VarChar(200)
  updatedAt         DateTime    @default(now())
  isActive          Boolean     @default(true) 
  status            Int         @default(0)

  feeTypeId         Int
  feeType           FeeType     @relation(fields: [feeTypeId], references: [id])

  managerId         Int
  manager           User        @relation("UserManageFee", fields: [managerId], references: [id])

  households        FeeRecordOnHousehold[]
}

model FeeType {
  id                Int         @id @default(autoincrement())
  typeName          String      @db.VarChar(100)
  description       String      @db.VarChar(100)
  isMandatory       Boolean     @default(true)
  unitPrice         Float
  createdAt         DateTime    @default(now())

  feeRecords        FeeRecord[]
}

model FeeRecordOnHousehold {
  householdId    Int
  feeRecordId    Int
  requiredAmount Float?
  amountPaid     Float      @default(0)
  paidAt         DateTime?
  status         Int        @default(0)

  household      Household  @relation(fields: [householdId], references: [id])
  feeRecord      FeeRecord  @relation(fields: [feeRecordId], references: [id])

  @@id([householdId, feeRecordId])
}
